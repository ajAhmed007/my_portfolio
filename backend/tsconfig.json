{
  "compilerOptions": {
    "target": "ES6", // JavaScript target version
    "module": "commonjs", // Module system (Node.js uses commonjs)
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Directory containing TypeScript source files
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Allow default imports from CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true // Enforce consistent casing in imports
  },
  "include": ["src/**/*.ts"], // Files to include in the compilation
  "exclude": ["node_modules"] // Exclude dependencies
}
